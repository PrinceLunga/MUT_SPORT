<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Sportify - Register</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div style="margin: 0;" class="col-lg-5 d-none d-lg-block "><img src="~/img/icons/mut_sport.png" width="470px" height="380px" /></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user" method="post" action="register.php">

                                <div class="form-group">
                                    <input asp-for="Input.StudentNumber" type="text" class="form-control form-control-user" name="studNum" placeholder="Student Number" name="studNum">
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Input.FirstName" type="text" class="form-control form-control-user" name="firstname" placeholder="First Name">
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="Input.LastName" type="text" class="form-control form-control-user" name="lastname" placeholder="Last Name">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Input.Email" type="text" class="form-control form-control-user" name="email" placeholder="Email Address" />
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <select asp-for="Input.Gender" class="form-control form-control-user">
                                            <option>Male</option>
                                            <option>Female</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="Input.Qualification" type="text" class="form-control form-control-user" name="qualification" placeholder="Qualification">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Input.StudyLevel" type="text" class="form-control form-control-user" name="level" placeholder="Study Level" />
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Input.ContactNumber" type="text" class="form-control form-control-user" name="contactNum" placeholder="Contact Number">
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="Input.EmergencyNumber" type="text" class="form-control form-control-user" name="emergencyNum" placeholder="Emergency Contact Number">
                                    </div>
                                </div>

                                <div class="form-group">

                                    <select asp-for="Input.Accomodation" class="form-control form-control-user" id="residence" name="residence">
                                        <option>Res</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <input id="address" type="text" style="display:none;" class="form-control form-control-user" name="address" placeholder="Address">
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user" name="pass" placeholder="Password">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user" name="pass2" placeholder="Repeat Password">
                                    </div>
                                </div>

                                <input type="submit" name="regBtn" class="btn btn-primary btn-user btn-block" value="Register Account" />


                                <hr>

                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="@Url.Content("~/Identity/Account/Login")">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script>
        $(document).ready(function () {
            if ($("#residence").val() == "Off Campus") {
                $("#address").css("display", "block");
            }
        });
    </script>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

</body>

</html>
