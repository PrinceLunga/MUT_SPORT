@model IEnumerable<MUT_MVC.Models.TrainingMvcModels>

@{
    ViewData["Title"] = "TrainingSchedules";
}

<div class="container">
    <h4>Training Schedules</h4>

    <table  cellpadding="1" cellspacing="1" style="margin: 0 auto;" class="table table-bordered table-responsive{-sm}">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Venue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FinishTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfSession)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @item.Venue
                    </td>
                    <td>
                        @item.StartTime.Substring(11, 5)
                    </td>
                    <td>
                        @item.FinishTime.Substring(11, 5)
                    </td>
                    <td>
                        @item.DateOfSession.ToShortDateString()
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
