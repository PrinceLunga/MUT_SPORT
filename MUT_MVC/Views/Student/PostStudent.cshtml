@model MUT_MODELS.StudentModel

@{
    ViewData["Title"] = "PostStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        <form class="user" method="post" asp-action="PostStudent">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="Fullnames" type="text" class="form-control form-control-user" name="studNum" placeholder="Student Number" name="studNum">
                            </div>

                            <div class="form-group row">

                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="PhoneNumber" type="text" class="form-control form-control-user" name="PhoneNumber" placeholder="Contact Number">
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="EmailAddress" type="text" class="form-control form-control-user" name="EmailAddress" placeholder="Email Address">
                                </div>
                            </div>

                            <div class="form-group">
                                <input asp-for="Accomodation" type="text" class="form-control form-control-user" name="Accomodation" placeholder="Flat / Res">
                            </div>

                            <div class="form-group">
                                <input asp-for="NextOfKinFullnames" type="text" class="form-control form-control-user" name="NextOfKinFullnames" placeholder="Next Of Kin Fullnames">
                            </div>

                            <div class="form-group row">

                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="NextOfKinPhoneNumber" type="text" class="form-control form-control-user" name="NextOfKinPhoneNumber" placeholder="Contact Number">
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input class="form-check-input" asp-for="HasMedicalAid" type="text" name="HasMedicalAid" placeholder="Has MedicalAid">
                                </div>
                            </div>

                            <div class="form-group">
                                <input asp-for="MedicalAidNumber" type="text" class="form-control form-control-user" name="MedicalAidNumber" placeholder="Medical Aid Number">
                            </div>



                            <div class="form-group">

                                <select asp-for="SportId" placeholder="Medical Aid Number" class="form-control form-control-user" name="SportId">


                                    <option>Soccer</option>
                                    <option>Rugby</option>
                                    <option>Cricket</option>
                                    <option>Basket Ball</option>
                                    <option>Boxing</option>
                                </select>

                            </div>

                            <div class="form-group row">

                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="Password" type="text" class="form-control form-control-user" name="Password" placeholder="Password">
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="ConfirmPassword" type="text" class="form-control form-control-user" name="ConfirmPassword" placeholder="Confirm Password">
                                </div>
                            </div>
                           

                            <input type="submit" name="regBtn" class="btn btn-primary btn-user btn-block" value="Register Account" />


                            <hr>

                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" href="forgot-password.html">Forgot Password?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="login.html">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

