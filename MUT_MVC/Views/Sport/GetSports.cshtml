@model IEnumerable<MUT_MODELS.SportModel>

@{
    ViewData["Title"] = "GetSports";
}

<h1>GetSports</h1>

<p>
    <a asp-action="AddSport">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Image)*@
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" style="overflow: hidden; position: relative; width:200px; height:200px; cursor:pointer">
            </td>
        </tr>
}
    </tbody>
</table>
